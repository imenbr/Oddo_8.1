            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_cheque_antidate_view"/>
            <field name="target">new</field>
        </record>

<!--==================== report spec ========================-->
        <report string="Cheques antidates"
		model="reglement.piece"
		auto="True"
		name="jasper_cheques_antidates_print"
		rml="office_stat/cheque_antidate/report/cheques_antidates.jrxml"
		id="cheque_antidates"
		menu="False"
		/>
        
        <menuitem id="submenu_wizard_cheque_antidate_report" name="Cheques antidates" action="action_wizard_cheque_antidate" parent="menu_rapport_reglement"  sequence="8"/>
